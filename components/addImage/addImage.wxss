@import"../../utils/font_face.wxss";
.images-box {
  border-radius: 10rpx;
  width: 100%;
}

.imageCount {
  height: 80rpx;
  line-height: 80rpx;
}
.addRemark{
  width: auto;
  height: 200rpx;
  margin: 10rpx 10rpx;
  border: 1px #9a9a9a solid;
  padding: 10rpx 10rpx;
}
.images {
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 5px 6px 10px rgb(223, 220, 220);
 
}
.addImageIcon{
  text-align: center;
  line-height: 260rpx;
  /* background-color: #eeeeee; */

}
.addImageIconHover{
  background-color: #C0C4CC;
}
.image {
  width: 320rpx;
  border-radius: 10rpx;
  height: 300rpx;
  margin-right: 10rpx;
}
.block .delete{
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: -10rpx;
  right:10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  background-color: rgb(209, 115, 115);
  color: white;

}
.block{
  position: relative;
  width: 350rpx;
  height: 300rpx;

}
