  margin-bottom: 15rpx;
}

.kongbai{
  margin: 10rpx;
}

/* 参加过的活动 */
/* 推荐歌曲 */

.header .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.header .more{
  float: right;
  padding: 6rpx 20rpx;
  font-size: 30rpx;
  color: rgb(142, 214, 236);
  border: 2rpx solid  rgb(142, 214, 236);
  text-align: center;
  line-height: 30rpx;
  border-radius: 25rpx;
  
}


.recommendContainer{
  padding: 10rpx 20rpx;
}
.recommendScroll{
  display: flex;
  height: 270rpx;
  margin-top: 10rpx;
}
.scrollItem{
  width: 300rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 280rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.scrollItem text{
  font-size: 24rpx;
  text-align: center;
  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;/*设置纵向对齐*/
  -webkit-line-clamp: 1;/*设置盒子行数*/
}
