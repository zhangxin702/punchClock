}

/* 图标导航 */
.navContainer{
  margin-top: 20rpx;
  margin: auto ;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 250rpx;
  background-color: #d6eefa;
  flex-wrap: wrap;
  border-bottom: 5rpx solid gray;
}
.navContainer .navItem{
  /* flex: 2; */
  width: 33.3vw;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;

}
