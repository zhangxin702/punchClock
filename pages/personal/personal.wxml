		<view class="navigator_item">
			<navigator url="/pages/activity_punch/activity_punch?page_id=0">已参与活动</navigator>
		</view>
		<view class="blank"></view>
	</view>
	<view class="control">
		<view class="blank"></view>
		<view class="navigator_item">
			<navigator url="/pages/activity_punch/activity_punch?page_id=1">已组织活动</navigator>
		</view>
		<view class="blank"></view>
	</view>
	<view class="control">
		<view class="blank"></view>
		<view class="navigator_item">
