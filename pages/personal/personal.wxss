.user_info_wrap {
  height: 500rpx;
  background-color: antiquewhite;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 500rpx;
  width: 100%;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  position: absolute;
  top: 150rpx;
  right: 40rpx;
  width: 275rpx;
  height: 275rpx;
  border-radius: 50%;
  z-index: 1;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  position: absolute;
  left: 100rpx;
  top: 50%;
  font-size: 70rpx;
  color: #fff;
  z-index: 1;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 200rpx;
  z-index: 1;
}
.user_info_wrap .user_btn navigator {
  border: 8rpx outset wheat;
  color: gray;
  font-size: 38rpx;
  font-weight: bold;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user_content .user_main {
  position: relative;
}
.user_content .user_main .wrap_all {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
}
.user_content .user_main .wrap_all .num_wrap {
  background-color: white;
  flex: 1;
  text-align: center;
}
.user_content .user_main .wrap_all .num_wrap .num {
  color: #cfcf31;
}
.user_content .user_main .wrap_all .num_wrap .name {
  color: grey;
}
.act_wrap {
  margin-top: 150rpx;
}
.act_wrap .control {
  margin-top: 10rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.act_wrap .control .blank {
  flex: 1;
}
.act_wrap .control .navigator_item {
  flex: 6;
  justify-content: space-around;
  border: 5rpx solid #eeecec;
  font-size: 38rpx;
  border-radius: 30rpx;
  box-shadow: 6rpx 6rpx 10rpx #ababad, -3rpx -3rpx 10rpx #e0dede;
  text-align: center;
}
.act_wrap .control .navigator_item navigator {
  padding: 30rpx;
}

.rail{
  border-bottom: 1rpx solid gray;
}