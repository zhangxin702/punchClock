  /* 活动列表页 */
.search {
  padding: 10rpx;
  height: 60rpx;
  background-color: paleturquoise;
  
}
.search input{
  background-color: #fff;
  display: flex;
  align-items: left;
  height: 100%;
  justify-content: center;
  border-radius: 15rpx;
  color: #666;
}

.first_tab {
  margin: 20rpx;
}
.actives_item {
    display: flex;
    border-bottom: 1rpx solid #ccc;
    height: 180rpx;
  }
.actives_item .actives_img {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
.actives_item .actives_img image {
    width: 90%;
  }
  .actives_item .actives_info {
    display: flex;
    flex: 3;
    flex-direction: column;
    justify-content: space-evenly;
  }
.actives_item .actives_info .actives_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
.actives_item .actives_info .actives_price {
    color:#dd3300 ;
    font-size: 20rpx;
  }
  